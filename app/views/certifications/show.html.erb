<%- model_class = Certification -%>
<div class="page-header">
  <h1><%=t '.title', :default => Certification %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:certification_type) %></dt>
      <dd><pre class="prettyprint"><%= @certification.certification_type %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:completed_date) %></dt>
      <dd><pre class="prettyprint"><%= @certification.completed_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:expiry_date) %></dt>
      <dd><pre class="prettyprint"><%= @certification.expiry_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:issuer) %></dt>
      <dd><pre class="prettyprint"><%= @certification.issuer %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:instructor_name) %></dt>
      <dd><pre class="prettyprint"><%= @certification.instructor_name %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              certifications_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_certification_path(@certification), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              certification_path(@certification),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

