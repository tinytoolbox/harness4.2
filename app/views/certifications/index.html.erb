<%- model_class = Certification -%>
<div class="page-header">
  <h1><%=t '.title', :default => Certification %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:certification_type) %></th>
      <th><%= model_class.human_attribute_name(:completed_date) %></th>
      <th><%= model_class.human_attribute_name(:expiry_date) %></th>
      <th><%= model_class.human_attribute_name(:issuer) %></th>
      <th><%= model_class.human_attribute_name(:instructor_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @certifications.each do |certification| %>
      <tr>
        <td><%= certification.id %></td>
        <td><%= certification.certification_type %></td>
        <td><%= certification.completed_date %></td>
        <td><%= certification.expiry_date %></td>
        <td><%= certification.issuer %></td>
        <td><%= certification.instructor_name %></td>
        <td><%=l certification.created_at, format: :long %></td>
        <td>
          <%= link_to certification_path(certification), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to certification_path(certification), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_certification_path,
            :class => 'btn btn-primary' %>
