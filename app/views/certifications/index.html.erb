<h1>Listing certifications</h1>

<table>
  <thead>
    <tr>
      <th>Certification type</th>
      <th>Completed date</th>
      <th>Expiry date</th>
      <th>Issuer</th>
      <th>Instructor name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certifications.each do |certification| %>
      <tr>
        <td><%= certification.certification_type %></td>
        <td><%= certification.completed_date %></td>
        <td><%= certification.expiry_date %></td>
        <td><%= certification.issuer %></td>
        <td><%= certification.instructor_name %></td>
        <td><%= certification.user %></td>
        <td><%= link_to 'Show', certification %></td>
        <td><%= link_to 'Edit', edit_certification_path(certification) %></td>
        <td><%= link_to 'Destroy', certification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

